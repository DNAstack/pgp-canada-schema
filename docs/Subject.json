{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://dnastack.github.io/pgp-canada-schema/Subject.json",
    "type": "object",
    "required": [
      "id"
    ],
    "properties": {
      "id": {
        "description": "Subject ID",
        "type": "string",
        "x-ga4gh-position": 0
      },
      "birth_date": {
        "description": "Birth year month in yyyy-mm format",
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{2}$",
        "x-ga4gh-position": 1
      },
      "blood_type": {
        "description": "Optional blood type",
        "$ref": "https://dnastack.github.io/pgp-canada-schema/BloodType.json",
        "x-ga4gh-position": 2
      },
      "sex": {
        "description": "Sex",
        "$ref": "https://dnastack.github.io/pgp-canada-schema/Sex.json",
        "x-ga4gh-position": 3
      }
    }
  }
